<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="D424Weightlifting.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:D424Weightlifting"
    Shell.NavBarIsVisible="False"
    Shell.FlyoutBehavior="Disabled"
    Title="D424Weightlifting">

    <TabBar>
        <ShellContent Title="Home"
                      ContentTemplate="{DataTemplate local:HomePage}"
                      Route="HomePage"/>
        <ShellContent Title="Workout"
                      ContentTemplate="{DataTemplate local:Choice}"
                      Route="Choice"/>
        <ShellContent Title="Macros"
                      ContentTemplate="{DataTemplate local:Macros}"
                      Route="Macros"/>
        <ShellContent Title="LiftingHistory"
                      ContentTemplate="{DataTemplate local:LiftingHistory}"
                      Route="LiftingHistory"/>        
    </TabBar>
</Shell>
